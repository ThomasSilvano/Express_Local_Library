extends layout

block content
  h1= title
  
  if book_list.length
    ul
      each book in book_list
        li
          a(href=book.url) #{book.title}
          |  (#{book.author.name})
                 button.btn.btn-primary(type='submit') Submit
    else
    p There are no books.

                 
      if book in book.isbn 
        li 
          a(href=)  #{book.isbn}
            (#{book.isbn})
                    button.btn.btn-primary(type='submit') Submit
 
      else
      p There are no ISBN